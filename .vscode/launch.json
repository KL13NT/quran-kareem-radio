{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with ts-node-dev",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "DOTENV_CONFIG_PATH": "./.env.dev"
            },
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}